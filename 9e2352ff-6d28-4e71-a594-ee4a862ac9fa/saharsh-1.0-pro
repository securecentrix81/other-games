<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Saharsh Life</title>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        text-align: center;
    }
    h1 {
        color: #333;
    }
    .game-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }
    .game {
        width: 300px;
        height: 200px;
        background-color: #fff;
        border: 2px solid #333;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    button {
        padding: 10px 20px;
        margin: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
</style>
</head>
<body>
    <h1>Welcome to Saharsh Life</h1>
    <div class="game-container">
        <div class="game">
            <p>Live as Saharsh and navigate through the challenges of failing classes, getting bullied, and playing Secure Centrix81.</p>
            <button onclick="playGame()">Start</button>
        </div>
    </div>
    <script>
        function playGame() {
            alert("You are now living as Saharsh. Good luck navigating through the challenges!");
            // Game logic
            let classesFailed = 0;
            let bulliesEncountered = 0;
            let gamesPlayed = 0;
            
            function failClass() {
                classesFailed++;
                alert("You failed a class. Total classes failed: " + classesFailed);
            }
            
            function encounterBully() {
                bulliesEncountered++;
                alert("You encountered a bully. Total bullies encountered: " + bulliesEncountered);
            }
            
            function playSecureCentrix() {
                gamesPlayed++;
                alert("You played Secure Centrix81. Total games played: " + gamesPlayed);
            }
        }
    </script>
</body>
</html>
